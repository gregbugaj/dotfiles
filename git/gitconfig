# https://stackoverflow.com/questions/46941346/how-to-know-the-git-username-and-email-saved-during-configuration

[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
    # pager = less -+F -+X
    # pager = cat
	# install via 'cargo install git-delta'
	pager = delta
    


[user]
	name = gregbugaj
	email = gregbugaj@yahoo.com

[commit]
	template = ~/.gitmessage

[credential]
	helper = store

[color]
	ui = true

[push]
	default = current

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

# Version controlled .gitconfig shared on different systems
[include]
    path = ~/.gitconfig-specific

# [includeIf "gitdir:~/dev/**"]
#     path = ~/.gitconfig-work

[alias]
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	f = fetch
	s = status
	co = checkout
	pp = pull --prune --rebase
	ggrep = grep --break --heading --line-number
	continue = rebase --continue
	abort = rebase --abort
	fix = commit --fixup
	who = shortlog -s --

  	# list aliases
  	la = "!git config -l | grep alias | cut -c 7-"
[init]
	defaultBranch = main
